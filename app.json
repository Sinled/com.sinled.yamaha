{
    "id": "com.sinled.yamaha",
    "version": "0.0.2",
    "compatibility": ">=2.0.0",
    "sdk": 2,
    "name": {
        "en": "Yamaha MusicCast"
    },
    "description": {
        "en": "Basic functionality for Yamaha MusicCast devices"
    },
    "category": [
        "music"
    ],
    "tags": {
        "en": [
            "device",
            "yamaha",
            "musiccast"
        ]
    },
    "permissions": [],
    "images": {
        "large": "/assets/images/large.png",
        "small": "/assets/images/small.png"
    },
    "author": {
        "name": "Dmytro Sd",
        "email": "sinled@gmail.com"
    },
    "capabilities": {
        "input_select": {
            "type": "enum",
            "title": {
                "en": "Select input"
            },
            "getable": true,
            "setable": true,
            "uiComponent": "picker",
            "values": [
                {
                    "id": "airplay",
                    "title": { "en": "AirPlay" }
                },
                {
                    "id": "net_radio",
                    "title": { "en": "Net Radio" }
                },
                {
                    "id": "spotify",
                    "title": { "en": "Spotify" }
                },
                {
                    "id": "bluetooth",
                    "title": { "en": "Bluetooth" }
                },
                {
                    "id": "tuner",
                    "title": { "en": "Tuner" }
                },
                {
                    "id": "hdmi1",
                    "title": { "en": "HDMI1" }
                },
                {
                    "id": "hdmi2",
                    "title": { "en": "HDMI2" }
                },
                {
                    "id": "hdmi3",
                    "title": { "en": "HDMI3" }
                },
                {
                    "id": "hdmi4",
                    "title": { "en": "HDMI4" }
                },
                {
                    "id": "av1",
                    "title": { "en": "AV1" }
                },
                {
                    "id": "audio1",
                    "title": { "en": "Audio1" }
                },
                {
                    "id": "audio2",
                    "title": { "en": "Audio2" }
                },
                {
                    "id": "aux",
                    "title": { "en": "AUX" }
                }
            ]
        }
    },
    "drivers": [
        {
            "id": "musiccast-device",
            "name": {
                "en": "MusicCast Device"
            },
            "class": "amplifier",
            "capabilities": [
                "volume_set",
                "onoff",
                "volume_mute",
                "input_select"
            ],
            "pair": [
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
            ],
            "images": {
                "large": "/drivers/musiccast-device/assets/images/large.png",
                "small": "/drivers/musiccast-device/assets/images/small.png"
            },
            "icon": "/drivers/musiccast-device/assets/icon.svg",
            "settings": [
                {
                    "type": "group",
                    "label": {
                        "en": "General settings"
                    },
                    "children": [
                        {
                            "id": "ip",
                            "type": "text",
                            "label": {
                                "en": "Device IP"
                            },
                            "hint": {
                                "en": "IP of device, it is usually detected when new device is added, but depending on your router settings it may change, it is good idea to have reserved ip for MusicCast device"
                            }
                        },
                        {
                            "id": "maxVolume",
                            "type": "number",
                            "value": 120,
                            "min": 0,
                            "max": 161,
                            "label": {
                                "en": "Device max volume"
                            },
                            "hint": {
                                "en": "Change this value to limit max volume level, for rx-481 161 === 16b, 120 = -20db"
                            }
                        },
                        {
                            "id": "minVolume",
                            "type": "number",
                            "value": 29,
                            "min": 0,
                            "max": 160,
                            "label": {
                                "en": "Device min volume"
                            },
                            "hint": {
                                "en": "Change this value to limit max volume level, for rx-481 0 === -77db, 29 = -66db, Should be less then Device max volume"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}